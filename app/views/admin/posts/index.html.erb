<h1>Listing All Posts</h1>
<center><p id="notice"><%= notice %></p></center>

<script type="text/javascript">
$(document).ready(function(){
	setTimeout(function(){
		$('#notice').remove();
	}, 1000);
})
</script>

<center><h1>
	Hi, <%= @administrator.name %>
</h1></center>

<%= link_to 'Post Something', new_post_path %>

<table class='table table-striped'>
  <thead>
    <tr>
      <td>Title</td>
      <td>Actions</td>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td>
          <%= link_to 'Show', post %> &middot;
          <%= link_to 'Edit', [:edit, :admin, post] %> &middot;
          <%= link_to 'Delete', [:admin, post], method: 'delete', confirm: 'Are you sure you want to delete this post?' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<link rel="stylesheet" type="text/css" href="/css/administrator.css">
